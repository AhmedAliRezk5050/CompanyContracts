@using Infrastructure.Utility
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Funder>

@{
    ViewData["Title"] = "جهات التمويل";
}

<div class="row">
    <div class="col-12">
        <h3 class="text-center mb-20">جهات التمويل</h3>
        <div class="d-flex flex-row gap-5 mb-5">
            @if (User.HasClaim("Permission", Permissions.Funders.Add))
            {
                <a asp-action="Create"
                   class="btn btn-success"
                   title="اضافة جهة تمويل">
                    <i class="bi bi-plus-square"></i>
                </a>
            }
            <a asp-action="GetFundersPdf"
               class="btn btn-success"
               title="طباعة جهات التمويل">
                <i class="bi bi-printer-fill"></i>
            </a>
        </div>

        <table class="table table-striped table-bordered table-hover text-center ">
            <thead>
            <tr>
                <th>م</th>
                <th>الاسم</th>
                <th>رقم الجهة</th>
                <th>الرقم الفرعي</th>
                <th>رقم الجوال</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @{
                var counter = 0;
            }
            @foreach (var funder in Model)
            {
                counter++;
                <tr>
                    <td>@counter</td>
                    <td>@funder.Name</td>
                    <td>@funder.MainNumber</td>
                    <td>@funder.SubNumber</td>
                    <td>@funder.PhoneNumber</td>
                    <td>@(funder.User?.UserName ?? "--")</td>
                    <td>
                        <a class="btn btn-secondary text-white"
                           asp-action="Details"
                           asp-route-id="@funder.Id"
                           title="تفاصيل">
                            <i class="bi bi-card-list"></i>
                        </a>
                    </td>
                    <td>
                        @if (User.HasClaim("Permission", Permissions.Funders.Edit))
                        {
                            <a class="btn btn-warning text-white"
                               asp-action="Edit" asp-route-id="@funder.Id"
                               title="تعديل">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        }
                    </td>
                    <td>
                        @if (User.HasClaim("Permission", Permissions.Funders.Delete))
                        {
                            <a class="btn btn-danger text-white"
                               id="deleteFunderBtn"
                               asp-action="Delete"
                               asp-route-id="@funder.Id"
                               title="حذف">
                                <i class="bi bi-trash"></i>
                            </a>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            const fundersIndexTempMsg = '@TempData["funders-index-temp-msg"]';

            if (fundersIndexTempMsg) {
                switch (fundersIndexTempMsg) {
                    case 'create-success':
                        Swal.fire({
                            text: 'تم الاضافة',
                            icon: 'success',
                        })
                        break;
                    case 'edit-success':
                        Swal.fire({
                            text: 'تم التعديل',
                            icon: 'success',
                        })
                        break;
                    case 'edit-error':
                        Swal.fire({
                            text: 'فشل التعديل',
                            icon: 'error',
                        })
                        break;
                    case 'delete-success':
                        Swal.fire({
                            text: 'تم الحذف',
                            icon: 'success',
                        })
                        break;
                    case 'delete-error':
                        Swal.fire({
                            text: 'فشل الحذف',
                            icon: 'error',
                        })
                        break;
                    case 'unknown-error':
                        Swal.fire({
                            text: 'خطأ غير معلوم',
                            icon: 'error',
                        })
                        break;
                }
            }

            //------------------------------------------
            $('#deleteFunderBtn').on('click', function (e) {
                debugger;
                const result = confirm("هل انت متاكد من حذف الجهة؟");
                if (!result) {
                    e.preventDefault();
                }
            });
            //------------------------------------------
        });
    </script>
}